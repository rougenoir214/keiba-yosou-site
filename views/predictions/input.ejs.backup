} else if (betType === 'sanrenpuku') {
document.getElementById('sanrenpuku-input').style.display = 'block';
} else if (betType === 'sanrentan') {
document.getElementById('sanrentan-input').style.display = 'block';
}
});

// å˜å‹ãƒ»è¤‡å‹ã®é¸æŠå‡¦ç†
function updateTanfukuSelection() {
const checkboxes = document.querySelectorAll('input[name="tanfuku_horse"]');
const checked = Array.from(checkboxes).filter(cb => cb.checked);
// 1é ­ã®ã¿é¸æŠå¯èƒ½
if (checked.length > 1) {
checked[0].checked = false;
}
// ãƒ©ãƒ™ãƒ«ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
checkboxes.forEach(cb => {
const label = cb.closest('.horse-checkbox-label');
if (cb.checked) label.classList.add('selected');
else label.classList.remove('selected');
});
// éš ã—ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã«å€¤ã‚’è¨­å®š
const selected = Array.from(checkboxes).filter(cb => cb.checked).map(cb => cb.value);
document.getElementById('horses_input').value = selected.join(',');
document.getElementById('bet_count').value = selected.length;
}

// é¦¬é€£ãƒ»ãƒ¯ã‚¤ãƒ‰ã®é¸æŠå‡¦ç†ï¼ˆçµ„ã¿åˆã‚ã›è¨ˆç®—ï¼‰
function updateUmarenSelection() {
const checkboxes = document.querySelectorAll('input[name="umaren_horse"]');
const checked = Array.from(checkboxes).filter(cb => cb.checked);
const n = checked.length;
const count = n >= 2 ? (n * (n - 1)) / 2 : 0;
// ãƒ©ãƒ™ãƒ«ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
checkboxes.forEach(cb => {
const label = cb.closest('.horse-checkbox-label');
if (cb.checked) label.classList.add('selected');
else label.classList.remove('selected');
});
// éš ã—ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã«å€¤ã‚’è¨­å®š
document.getElementById('horses_input').value = checked.map(cb => cb.value).join(',');
document.getElementById('bet_count').value = count;
document.getElementById('umaren-count').textContent = count + 'ç‚¹';
const amount = parseInt(document.getElementById('amount').value) || 100;
document.getElementById('umaren-amount').textContent = amount;
}

// é¦¬å˜ã®é¸æŠå‡¦ç†
function updateUmatanSelection() {
const first = Array.from(document.querySelectorAll('input[name="umatan_first"]:checked'));
const second = Array.from(document.querySelectorAll('input[name="umatan_second"]:checked'));
const n = first.length;
const m = second.length;
// é‡è¤‡ã‚’é™¤ã„ãŸçµ„ã¿åˆã‚ã›æ•°
let count = 0;
first.forEach(f => {
second.forEach(s => {
if (f.value !== s.value) count++;
});
});
// ãƒ©ãƒ™ãƒ«ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
document.querySelectorAll('input[name="umatan_first"], input[name="umatan_second"]').forEach(cb => {
const label = cb.closest('.horse-checkbox-label');
if (cb.checked) label.classList.add('selected');
else label.classList.remove('selected');
});
// éš ã—ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã«å€¤ã‚’è¨­å®šï¼ˆ1ç€-2ç€ã®å½¢å¼ï¼‰
const horses = first.map(f => f.value).join(',') + '-' + second.map(s => s.value).join(',');
document.getElementById('horses_input').value = horses;
document.getElementById('bet_count').value = count;
document.getElementById('umatan-count').textContent = count + 'ç‚¹';
const amount = parseInt(document.getElementById('amount').value) || 100;
document.getElementById('umatan-amount').textContent = amount;
}

// 3é€£è¤‡ã®é¸æŠå‡¦ç†
function updateSanrenpukuSelection() {
const checkboxes = document.querySelectorAll('input[name="sanrenpuku_horse"]');
const checked = Array.from(checkboxes).filter(cb => cb.checked);
const n = checked.length;
const count = n >= 3 ? (n * (n - 1) * (n - 2)) / 6 : 0;
// ãƒ©ãƒ™ãƒ«ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
checkboxes.forEach(cb => {
const label = cb.closest('.horse-checkbox-label');
if (cb.checked) label.classList.add('selected');
else label.classList.remove('selected');
});
// éš ã—ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã«å€¤ã‚’è¨­å®š
document.getElementById('horses_input').value = checked.map(cb => cb.value).join(',');
document.getElementById('bet_count').value = count;
document.getElementById('sanrenpuku-count').textContent = count + 'ç‚¹';
const amount = parseInt(document.getElementById('amount').value) || 100;
document.getElementById('sanrenpuku-amount').textContent = amount;
}

// 3é€£å˜ã®é¸æŠå‡¦ç†
function updateSanrentanSelection() {
const first = Array.from(document.querySelectorAll('input[name="sanrentan_first"]:checked'));
const second = Array.from(document.querySelectorAll('input[name="sanrentan_second"]:checked'));
const third = Array.from(document.querySelectorAll('input[name="sanrentan_third"]:checked'));
// é‡è¤‡ã‚’é™¤ã„ãŸçµ„ã¿åˆã‚ã›æ•°
let count = 0;
first.forEach(f => {
second.forEach(s => {
if (f.value !== s.value) {
third.forEach(t => {
if (t.value !== f.value && t.value !== s.value) {
count++;
}
});
}
});
});
// ãƒ©ãƒ™ãƒ«ã®ãƒã‚¤ãƒ©ã‚¤ãƒˆ
document.querySelectorAll('input[name="sanrentan_first"], input[name="sanrentan_second"], input[name="sanrentan_third"]').forEach(cb => {
const label = cb.closest('.horse-checkbox-label-small');
if (cb.checked) label.classList.add('selected');
else label.classList.remove('selected');
});
// éš ã—ãƒ•ã‚£ãƒ¼ãƒ«ãƒ‰ã«å€¤ã‚’è¨­å®š
const horses = first.map(f => f.value).join(',') + '-' + second.map(s => s.value).join(',') + '-' + third.map(t => t.value).join(',');
document.getElementById('horses_input').value = horses;
document.getElementById('bet_count').value = count;
document.getElementById('sanrentan-count').textContent = count + 'ç‚¹';
const amount = parseInt(document.getElementById('amount').value) || 100;
document.getElementById('sanrentan-amount').textContent = amount;
}

// é‡‘é¡å¤‰æ›´æ™‚ã®å†è¨ˆç®—
document.getElementById('amount').addEventListener('input', function() {
const betType = document.getElementById('bet_type').value;
if (betType === 'umaren' || betType === 'wide') updateUmarenSelection();
else if (betType === 'umatan') updateUmatanSelection();
else if (betType === 'sanrenpuku') updateSanrenpukuSelection();
else if (betType === 'sanrentan') updateSanrentanSelection();
});

// åˆæœŸè¡¨ç¤º
document.getElementById('tanfuku-input').style.display = 'block';
document.getElementById('marks-form').addEventListener('submit', async (e) => {
e.preventDefault();
const formData = new FormData(e.target);
const marks = {};
for (const [key, value] of formData.entries()) {
if (key.startsWith('mark_') && value) {
marks[key.replace('mark_', '')] = value;
}
}
try {
const r = await fetch('/predictions/<%= race.race_id %>/marks', {
method: 'POST',
headers: { 'Content-Type': 'application/json' },
body: JSON.stringify({ marks })
});
alert(r.ok ? 'å°ã‚’ä¿å­˜ã—ã¾ã—ãŸ' : 'ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ');
} catch (error) { alert('ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ'); }
});
document.getElementById('bet-form').addEventListener('submit', async (e) => {
e.preventDefault();
const betType = document.getElementById('bet_type').value;
const horses = document.getElementById('horses_input').value;
const betCount = parseInt(document.getElementById('bet_count').value) || 0;
const amount = parseInt(document.getElementById('amount').value) || 100;

if (!horses || betCount === 0) {
alert('é¦¬ã‚’é¸æŠã—ã¦ãã ã•ã„');
return;
}

const data = {
bet_type: betType,
horses: horses,
amount: amount,
buy_method: 'normal',
bet_count: betCount
};

try {
const r = await fetch('/predictions/<%= race.race_id %>/bets', {
method: 'POST',
headers: { 'Content-Type': 'application/json' },
body: JSON.stringify(data)
});
const result = await r.json();
if (r.ok) {
alert(`é¦¬åˆ¸ã‚’è¿½åŠ ã—ã¾ã—ãŸï¼ˆ${betCount}ç‚¹ Ã— ${amount}å†† = ${betCount * amount}å††ï¼‰`);
location.reload();
} else {
alert(result.error || 'ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ');
}
} catch (error) { 
console.error(error);
alert('ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ'); 
}
});
