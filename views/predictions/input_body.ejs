        <!-- 印入力セクション -->
        <div class="section">
            <h2>🎯 印を入力</h2>
            <form id="marks-form">
                <table>
                    <thead>
                        <tr>
                            <th>枠</th>
                            <th>馬番</th>
                            <th>馬名</th>
                            <th>騎手</th>
                            <th>印</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                        const existingMarks = {};
                        predictions.forEach(p => {
                            existingMarks[p.umaban] = p.mark;
                        });
                        %>
                        <% horses.forEach(horse => { %>
                            <tr>
                                <td>
                                    <div class="waku waku-<%= horse.waku %>">
                                        <%= horse.waku %>
                                    </div>
                                </td>
                                <td><strong><%= horse.umaban %></strong></td>
                                <td><%= horse.horse_name %></td>
                                <td><%= horse.jockey %></td>
                                <td>
                                    <select name="mark_<%= horse.umaban %>" class="mark-select">
                                        <option value="">-</option>
                                        <option value="◎" <%= existingMarks[horse.umaban] === '◎' ? 'selected' : '' %>>◎</option>
                                        <option value="○" <%= existingMarks[horse.umaban] === '○' ? 'selected' : '' %>>○</option>
                                        <option value="▲" <%= existingMarks[horse.umaban] === '▲' ? 'selected' : '' %>>▲</option>
                                        <option value="△" <%= existingMarks[horse.umaban] === '△' ? 'selected' : '' %>>△</option>
                                        <option value="☆" <%= existingMarks[horse.umaban] === '☆' ? 'selected' : '' %>>☆</option>
                                    </select>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
                <button type="submit" class="btn btn-success" style="margin-top: 15px;">印を保存</button>
            </form>
        </div>

        <!-- 馬券購入セクション -->
        <div class="section">
            <h2>💰 馬券を購入</h2>
            <form id="bet-form">
                <div class="form-group">
                    <label for="bet_type">馬券種別</label>
                    <select id="bet_type" name="bet_type" required>
                        <option value="tansho">単勝</option>
                        <option value="fukusho">複勝</option>
                        <option value="umaren">馬連</option>
                        <option value="umatan">馬単</option>
                        <option value="wide">ワイド</option>
                        <option value="sanrenpuku">3連複</option>
                        <option value="sanrentan">3連単</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="horses_input">馬番（カンマ区切り）</label>
                    <input type="text" id="horses_input" name="horses" 
                           placeholder="例: 1,3,5" required>
                    <small>単勝・複勝は1頭、馬連・馬単・ワイドは2頭、3連複・3連単は3頭</small>
                </div>
                
                <div class="form-group">
                    <label for="amount">金額（円）</label>
                    <input type="number" id="amount" name="amount" 
                           min="100" step="100" value="100" required>
                </div>
                
                <button type="submit" class="btn">馬券を追加</button>
            </form>
        </div>

        <!-- 購入済み馬券一覧 -->
        <div class="section">
            <h2>🎫 購入済み馬券</h2>
            <ul class="bet-list" id="bet-list">
                <% if (bets.length === 0) { %>
                    <p style="color: #888;">まだ馬券を購入していません</p>
                <% } else { %>
                    <% 
                    const betTypeNames = {
                        'tansho': '単勝',
                        'fukusho': '複勝',
                        'umaren': '馬連',
                        'umatan': '馬単',
                        'wide': 'ワイド',
                        'sanrenpuku': '3連複',
                        'sanrentan': '3連単'
                    };
                    let totalAmount = 0;
                    %>
                    <% bets.forEach(bet => { 
                        totalAmount += bet.amount;
                    %>
                        <li class="bet-item">
                            <div class="bet-info">
                                <strong><%= betTypeNames[bet.bet_type] %></strong>: 
                                <%= bet.horses %> - <%= bet.amount.toLocaleString() %>円
                            </div>
                            <button class="btn btn-danger" onclick="deleteBet(<%= bet.id %>)">削除</button>
                        </li>
                    <% }); %>
                    <div class="total-amount">
                        合計: <span id="total-amount"><%= totalAmount.toLocaleString() %></span>円
                    </div>
                    <div class="remaining-amount" id="remaining-amount">
                        残り: <%= (10000 - totalAmount).toLocaleString() %>円
                    </div>
                <% } %>
            </ul>
        </div>
    </div>
